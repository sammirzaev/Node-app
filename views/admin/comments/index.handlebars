<h1>Commemnts</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Owner</th>
      <th>Comments</th>
      <th>Status</th>
      <th scope="col">Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      {{#each comments}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{user.firstName}}</td>
      <td>{{body}}</td>
      <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
      <td>{{generateTime date "MMMM Do YYYY"}}</td>
      <td>
        <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
           <button class="btn btn-danger">DELETE</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
  
</table>
<div class="container">
    <div class="row">
      <div class="col-md-10">
      <ul class="pagination justify-content-center mb-4">
                {{#paginate current=current pages=pages}}{{/paginate}}
      </ul>
      </div>
    </div>
</div>
